<div class="row my-5 justify-content-center">
    <div class="col-10 col-md-6 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3 class="row justify-content-center"><%=title%></h3>
            </div>
            <div class="card-body">
                <form name="frm">
                    <input class="form-control mb-3" name="email">
                    <input class="form-control mb-3" name="password" type="password">
                    <button class="btn btn-primary w-100">회원가입</button>
                </form>

                <div class="text-end mt-3">
                    <a href="/users/login">로그인</a>
                </div>
            </div>
        </div> 
    </div>
</div>

<script type="module">
    import {app} from '/javascripts/config.js'
    import {getAuth, createUserWithEmailAndPassword} from "https://www.gstatic.com/firebasejs/10.13.2/firebase-auth.js";
    const auth = getAuth(app);

    $(frm).on("submit", function(e){
        e.preventDefault();
        const email = $(frm.email).val();
        const password = $(frm.password).val();
        createUserWithEmailAndPassword(auth, email, password).then(success=>{
            alert("회원가입 성공")
            sessionStorage.setItem("email", email);
            location.href="/users/login";
        }).catch(error=>{
            alert("회원가입 실패" + error.message)
        })

    });
</script>