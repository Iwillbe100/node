<div class="row my-5 justify-content-center">
    <div class="col-10 col-md-6 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3 class="row justify-content-center"><%=title%></h3>
            </div>
            <div class="card-body">
                <form name="frm">
                    <input class="form-control mb-3" name="email" value="test@test.com">
                    <input class="form-control mb-3" name="password" value="123456" type="password">
                    <button class="btn btn-primary w-100">로그인</button>
                </form>

                <div class="text-end mt-3">
                    <a href="/users/join">회원가입</a>
                </div>
                 </div>
        </div> 
    </div>
</div>

<script type="module">
    import {app} from '/javascripts/config.js'
    import {getAuth, signInWithEmailAndPassword} from "https://www.gstatic.com/firebasejs/10.13.2/firebase-auth.js";
    const auth = getAuth(app);

    $(frm).on("submit", function(e){
        e.preventDefault();
        const email = $(frm.email).val();
        const password = $(frm.password).val();
        signInWithEmailAndPassword(auth, email, password).then(success=>{
            alert("login success")
            sessionStorage.setItem("email", email);

            if(sessionStorage.getItem("target")){
                location.href=sessionStorage.getItem("target");
            }else{
                location.href="/";
            }

            location.href="/";
        }).catch(error=>{
            alert("login fail" + error.message)
        })

    });
</script>